<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rlPopupBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vArrow"
            android:layout_width="@dimen/margin_size_10"
            android:layout_height="@dimen/margin_size_5"
            android:layout_marginTop="@dimen/margin_size_4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_size_30" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vArrow"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/color_f"
            app:cardCornerRadius="@dimen/margin_size_6"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="@dimen/margin_size_175"
                android:layout_height="@dimen/margin_size_120">

                <RelativeLayout
                    android:id="@+id/rlArticle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivArticle"
                        android:layout_width="@dimen/margin_size_30"
                        android:layout_height="@dimen/margin_size_30"
                        android:layout_marginStart="@dimen/margin_size_12"
                        android:layout_marginTop="@dimen/margin_size_15"
                        android:layout_marginBottom="@dimen/margin_size_15"
                        android:src="@drawable/ic_article" />

                    <TextView
                        android:id="@+id/tvArticle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_size_10"
                        android:layout_marginTop="@dimen/margin_size_12"
                        android:layout_toEndOf="@id/ivArticle"
                        android:gravity="center"
                        android:text="@string/mine_content_tab_articles"
                        android:textColor="@color/color_303a47"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tvArticleDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvArticle"
                        android:layout_alignStart="@id/tvArticle"
                        android:layout_marginTop="@dimen/margin_size_2"
                        android:gravity="center"
                        android:text="@string/mine_share_articles"
                        android:textColor="@color/color_8798af"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlArticle">

                    <ImageView
                        android:id="@+id/ivVideo"
                        android:layout_width="@dimen/margin_size_30"
                        android:layout_height="@dimen/margin_size_30"
                        android:layout_marginStart="@dimen/margin_size_12"
                        android:layout_marginTop="@dimen/margin_size_15"
                        android:layout_marginBottom="@dimen/margin_size_15"
                        android:src="@drawable/ic_video" />

                    <TextView
                        android:id="@+id/tvVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_size_10"
                        android:layout_marginTop="@dimen/margin_size_11"
                        android:layout_toEndOf="@id/ivVideo"
                        android:gravity="center"
                        android:text="@string/mine_content_tab_video"
                        android:textColor="@color/color_303a47"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tvVideoDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvVideo"
                        android:layout_alignStart="@id/tvVideo"
                        android:layout_marginTop="@dimen/margin_size_2"
                        android:gravity="center"
                        android:text="@string/mine_share_vidoes"
                        android:textColor="@color/color_8798af"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>